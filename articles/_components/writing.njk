			<div class="mb4 mt5 mb5-ns mt6-ns">
                <h1>Some writing I've done.</h1>
				{%- for post in collections.post | reverse %}
					{% set monthHeader = post | getMonthHeader(collections.post[loop.revindex]) %}
					{% if monthHeader %}
						{% if not loop.first %}
						</ul>
						{% endif %}

						<h3>{{monthHeader}}</h3>
						<ul>
					{% endif %}

                    <li class="mb2">
						{% if post.data.eleventyNavigation %} 
							<a href="{{ post.data.eleventyNavigation.url | url}}" class="black link underline hover-bg-black-90 hover-yellow">
								{{post.data.title}}
							</a>&nbsp;&#x29c9;
						{% else %}
							<a href="{{ post.url | url}}" class="black link underline hover-bg-black-90 hover-yellow">
								{{post.data.title}}
							</a>
						{% endif %}
                    </li>
					{% if loop.last %}
						</ul>
					{% endif %}
					
				{%- endfor %}
